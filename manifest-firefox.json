{
  "manifest_version": 2,
  "name": "TapX â€” Seamless X.com Puzzles",
  "version": "0.1.0",
  "description": "Removes gaps between split-image puzzle posts on X / Twitter for a seamless, immersive viewing experience.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://pbs.twimg.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "css": ["content/seamless.css"],
      "js": ["content/compat.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "web_accessible_resources": ["icons/*.png"]
}
